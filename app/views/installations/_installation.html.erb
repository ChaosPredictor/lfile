<div class="row">

	<% if current_page == "createfile" %>
		<div class = "col-md-1 installation_check_box">
			<%= f.check_box :torun %>
			<%= hidden_field_tag :number, String(installation_counter) %>
		</div>
	<% end %>

			<% if logged_in? %>
				<div class = "col-md-2">
					<%= link_to installation.name, installation %>
				</div>			
				<div class = "col-md-4">
					<% if current_user.admin? %>
						<%= link_to "edit", edit_installation_path(installation), :class => "edit" %>
						<%= link_to "delete", installation, method: :delete, data: { confirm: "You sure?" }, :class => "delete" %>
					<% end %>
				</div>
			<% else %>
				<div class = "col-md-4">
					
					<%= installation.name %>
				</div>
			<% end %>
			<div class = "col-md-3">
			</div>			

</div>