<% provide(:title, "Instalation " + @instalation.name) %>
<div class="row">
	<h1>
				<%= "Instalation of: " + @instalation.name %>
	</h1>	
	<aside class="col-md-4">
		<section class="user_info">
			<h2>
				<div id="version">
					Version: <%= @instalation.version %>
				</div>
				<div id="os">
					Operation System: <%= @instalation.os %>
				</div>
				<div>
					<% if current_user.admin? %>
						<%= link_to "edit", edit_instalation_path(@instalation), :class => "edit" %>
						<%= link_to "delete", @instalation, method: :delete, data: { confirm: "You sure?" }, :class => "delete" %>
					<% end %>
				</div>
			</h2>
			<!--section class="stats">
				<!--%= render 'shared/stats' %-->
			</section-->
		</section>
	</aside>
	<div class="col-md-8">
		<h3><%= @title %></h3>
		<% if @lines != nil & @lines.empty? %>
		<!--% if @user.microposts.any? %-->
			<span><%= pluralize(@lines.count, "line") %></span>
			<!--%= will_paginate %-->		
			<ul class="lines">
				<%= render @lines %>
			</ul>
			<!--%= will_paginate %-->
		<% end %>
		<!--Step.maximum("order")+-->
		<!--%= form_for(@instalation.addline(Line.first, 1), remote: true) do |f| %-->
		<%= form_for(@instalation.active_steps.build, remote: false) do |f| %>		
			<div><%= hidden_field_tag :instalation_id, @instalation.id %></div>
				<!--TODO change to dinamic -->	
			<div class="col-md-10">
				<!--% lines_array = Line.all.map { |line| [line.content, line.id] } %-->
				<%= f.collection_select(:line_id, Line.all, :id, :content) %>
				<!--select-->
					<!--%= f.select :line, options_for_select(lines_array) %-->
					<!--%= f.select :selected => :line, options_for_select(lines_array) %-->
				<!--/select-->
			</div>
			<div><!--%= hidden_field_tag :line_id, Line.first.id %--></div>
			<div><!--%= hidden_field_tag :line_id, @line %--></div>
			<div class="col-md-2">
				<%= f.submit "Add line", class: "btn btn-primary" %>
			</div>
		<% end %>
	</div>
</div>